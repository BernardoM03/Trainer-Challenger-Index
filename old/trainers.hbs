<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,
                                   initial-scale=1.0">
    <title>Browse Trainer Records</title>

    <!-- To link external styling file -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Hidden table for entering new data -->
    <script>

      function showForm() {
        document.getElementById("trainerForm").style.display = "block";
      }

      function submitTrainer() {
        let name   = document.getElementById("name").value;
        let age    = document.getElementById("age").value;
        let region = document.getElementById("region").value;

        if (name && age && region) {
          alert(`Trainer Added:\nName: ${name}\nAge: ${age}\nRegion: ${region}`);
          document.getElementById("trainerForm").style.display = "none";
        } else {
          alert("Please fill in all fields.");
        }
      }

      function confirmDeletion(trainer_id) {
        if (confirm("Are you sure you want to delete this trainer?")) {
            window.location.href = "/delete_trainer/" + trainer_id;
        }
      }
    </script>
</head>

<body>
    <header>
        <h1>Trainers</h1>
        <nav>
          <ul>
            <li><a href="/trainers">Trainers</a></li>
            <li><a href="pokemon.html">Pokemon</a></li>
            <li><a href="Gyms.html">Gyms</a></li>
            <li><a href="regions.html">Regions</a></li>
            <li><a href="trainerGyms.html">TrainerGyms</a></li>
          </ul>
        </nav>
    </header>
    <main>
        <p><strong>Browse Trainers</strong></p>

        <button type="button" onclick="showForm()">Add New Trainer</button>

        <form id="trainerForm">
          <label for="name">Name:</label>
          <input type="text" id="name" required><br><br>

          <label for="age">Age:</label>
          <input type="number" id="age" required><br><br>

          <label for="region">Home Region:</label>
            <select id="region" required>
                <option value="">Select Region</option>
                <option value="Kanto">Kanto</option>
                <option value="Johto">Johto</option>
                <option value="Hoenn">Hoenn</option>
                <option value="Sinnoh">Sinnoh</option>
                <option value="Unova">Unova</option>
                <option value="Kalos">Kalos</option>
                <option value="Alola">Alola</option>
                <option value="Galar">Galar</option>
                <option value="Paldea">Paldea</option>
            </select><br><br>

        <button type="button" onclick="submitTrainer()">Submit</button>
        </form>

        <table border="1" cellpadding="5">

{{!-- Create a table --}}
<table border="1" cellpadding="5">

    {{!-- Header section --}}
    <thead>
        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>Trainer ID</th>
            <th>Name</th>
            <th>Age</th>
            <th>Home Region</th>
            <th>Actions</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>
        {{!-- For each row, print the id, name, age, region_id, in order --}}
        {{#each data}}
        <tr>
            <td>{{this.trainer_id}}</td>
            <td>{{this.trainer_name}}</td>
            <td>{{this.age}}</td>
            <td>{{this.region_name}}</td>

            <td>
                <a href="/update_trainer/{{this.trainer_id}}" class="table_button">Update</a>
                <a href="/delete_trainer/{{this.trainer_id}}" class="table_button">Delete</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
        </table>
    </main>
    <footer>
        <p>&copy; 2025 Trainer Challenge Index. All rights reserved.</p>
    </footer>
    <!-- To link external javascript file -->
    <script src="scripts.js"></script>
</body>

</html>
